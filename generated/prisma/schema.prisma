generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  firstname    String
  lastname     String
  username     String  @unique
  role         Role    @default(MEMBRO)
  posts        Post[]
  password     String
  refreshToken String?
}

model Post {
  id         Int      @id @default(autoincrement())
  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int
  title      String
  text       String
  image      String
  references String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model news {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  images    String[]
  source    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  MEMBRO
  EDITOR
  CHEFE
}
